
<% if flash[:notice] %>
  <%= notice %>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/sidebar', user: @book.user, new_book: @new_book %>
    
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class='table table-hover table-inverse'>
        <tbody>
            <tr>
                <td><%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size: "60x60" %>
                <br><%= link_to @book.user.name, user_path(@book.user.id) %></td>
                <td><%= link_to @book.title, book_path(@book.id) %></td>
                <td><%= @book.body %></td>
            </tr>
        </tbody>
      </table>
      
      <% if current_user == @book.user%>
        <%= link_to "Edit", edit_book_path(@book) %> | 
        <%= link_to "Destroy", book_path(@book), method: :delete %>
      <% end %>
    </div>
  </div>
</div>

